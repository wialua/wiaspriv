local TweenInfoLoader = TweenInfo.new(1.8, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
local TweenInfoUltraShort = TweenInfo.new(0.25, Enum.EasingStyle.Quint, Enum.EasingDirection.Out)
local TweenInfoShort = TweenInfo.new(0.5, Enum.EasingStyle.Quint, Enum.EasingDirection.Out)
local TweenInfoMedium = TweenInfo.new(1.0, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut)
local TweenInfoScanBase = TweenInfo.new(4.0, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1, true)
local TweenInfoShimmerLoop = TweenInfo.new(1.8, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1, true)
local TweenInfoPulse = TweenInfo.new(0.9, Enum.EasingStyle.Elastic, Enum.EasingDirection.Out)

local TweenInfoClose = TweenInfo.new(2.0, Enum.EasingStyle.Cubic, Enum.EasingDirection.InOut)

local function loaderEntrance()
    local initialTrans = 1
    MainFrame.BackgroundTransparency = initialTrans
    Title.TextTransparency = initialTrans
    TitleInnerGlow.Transparency = initialTrans
    TitleOuterGlow.Transparency = initialTrans
    Subtitle.TextTransparency = initialTrans
    Version.TextTransparency = initialTrans
    ProgressCore.BackgroundTransparency = initialTrans
    ProgressCoreStroke.Transparency = initialTrans
    ProgressFill.BackgroundTransparency = initialTrans
    ProgressFillStroke.Transparency = initialTrans
    ProgressFill.Size = UDim2.new(0, 0, 1, 0)
    ProgressLabel.TextTransparency = initialTrans
    StatusCore.TextTransparency = initialTrans
    ScanMatrix.BackgroundTransparency = initialTrans
    for _, beam in pairs(ScanMatrix:GetChildren()) do
        if beam:IsA("Frame") and beam.Name:find("HoloBeam") then
            beam.BackgroundTransparency = initialTrans
            local particles = beam:FindFirstChild("Particles" .. (tonumber(beam.Name:match("%d+") or 0)))
            if particles then 
                particles.BackgroundTransparency = initialTrans
                local glow = particles:FindFirstChild("UIStroke")
                if glow then glow.Transparency = initialTrans end
            end
        end
    end
    ShadowLayer1.BackgroundTransparency = initialTrans
    ShadowLayer2.BackgroundTransparency = initialTrans
    ShadowLayer3.BackgroundTransparency = initialTrans
    MainStroke.Transparency = initialTrans
    OuterGlow.Transparency = initialTrans
    InnerGlow.Transparency = initialTrans
    MainFrame.Size = UDim2.new(0, 0, 0, 0)
    
    pcall(function()
        local expandTween = TweenService:Create(MainFrame, TweenInfoLoader, {Size = UDim2.new(0, 600, 0, 500), BackgroundTransparency = 0})
        expandTween:Play()
    end)
    
    task.wait(1.8)
    pcall(function()
        local titleTween = TweenService:Create(Title, TweenInfoShort, {TextTransparency = 0})
        titleTween:Play()
        
        local innerGlowTween = TweenService:Create(TitleInnerGlow, TweenInfoShort, {Transparency = 0.4})
        innerGlowTween:Play()
        
        local outerGlowTween = TweenService:Create(TitleOuterGlow, TweenInfoUltraShort, {Transparency = 0.8})
        outerGlowTween:Play()
        
        task.wait(0.5)
        local subtitleTween = TweenService:Create(Subtitle, TweenInfoShort, {TextTransparency = 0})
        subtitleTween:Play()
        
        task.wait(0.5)
        local versionTween = TweenService:Create(Version, TweenInfoShort, {TextTransparency = 0})
        versionTween:Play()
        
        task.wait(0.5)
        local beams = ScanMatrix:GetChildren()
        for i, beam in ipairs(beams) do
            if beam:IsA("Frame") and beam.Name:find("HoloBeam") then
                local delayTime = (i - 1) * 0.15
                task.wait(delayTime)
                local delayedScanInfo = TweenInfo.new(TweenInfoScanBase.Time, TweenInfoScanBase.EasingStyle, TweenInfoScanBase.EasingDirection, TweenInfoScanBase.RepeatCount, TweenInfoScanBase.Reverses)
                local beamTween = TweenService:Create(beam, delayedScanInfo, {Position = UDim2.new(0, 0, 1, -120), BackgroundTransparency = 0.5})
                beamTween:Play()
                
                local particles = beam:FindFirstChild("Particles" .. (tonumber(beam.Name:match("%d+") or 0)))
                if particles then
                    local particleTween = TweenService:Create(particles, TweenInfoShimmerLoop, {Position = UDim2.new(1.3, 0, 0, 0), BackgroundTransparency = 0.8})
                    particleTween:Play()
                    
                    local glowTween = TweenService:Create(particles:FindFirstChild("UIStroke"), TweenInfoShimmerLoop, {Transparency = 0.3})
                    glowTween:Play()
                end
            end
        end
        
        task.wait(1.2)
        local coreTween = TweenService:Create(ProgressCore, TweenInfoShort, {BackgroundTransparency = 0})
        coreTween:Play()
        
        local coreStrokeTween = TweenService:Create(ProgressCoreStroke, TweenInfoShort, {Transparency = 0.5})
        coreStrokeTween:Play()
        
        local labelTween = TweenService:Create(ProgressLabel, TweenInfoShort, {TextTransparency = 0})
        labelTween:Play()
        
        local statusTween = TweenService:Create(StatusCore, TweenInfoShort, {TextTransparency = 0})
        statusTween:Play()
        
        local shimmerTween = TweenService:Create(ProgressShimmerCore, TweenInfoShimmerLoop, {Position = UDim2.new(1.7, 0, 0, 0)})
        shimmerTween:Play()
        
        local shadow1Tween = TweenService:Create(ShadowLayer1, TweenInfoMedium, {BackgroundTransparency = 0.3})
        shadow1Tween:Play()
        
        local shadow2Tween = TweenService:Create(ShadowLayer2, TweenInfoMedium, {BackgroundTransparency = 0.5})
        shadow2Tween:Play()
        
        local shadow3Tween = TweenService:Create(ShadowLayer3, TweenInfoMedium, {BackgroundTransparency = 0.7})
        shadow3Tween:Play()
        
        local strokeTween = TweenService:Create(MainStroke, TweenInfoShort, {Transparency = 0.2})
        strokeTween:Play()
        
        local outerTween = TweenService:Create(OuterGlow, TweenInfoShort, {Transparency = 0.7})
        outerTween:Play()
        
        local innerTween = TweenService:Create(InnerGlow, TweenInfoShort, {Transparency = 0.4})
        innerTween:Play()
    end)
end

local loaderTime = 0
local loaderConnection
local function initiateLoaderEffects()
    loaderTime = 0
    loaderConnection = RunService.Heartbeat:Connect(function(delta)
        loaderTime = loaderTime + delta
        local pulse = (math.sin(loaderTime * 2.8) + 1) / 2 * 0.1 + 0.9
        local glow = (math.cos(loaderTime * 1.9) + 1) / 2 * 0.2 + 0.8
        local shift = math.sin(loaderTime * 0.95) * 0.25
        Title.TextTransparency = pulse
        TitleInnerGlow.Transparency = glow
        TitleOuterGlow.Transparency = glow + 0.1
        Subtitle.TextTransparency = pulse
        MainGradient.Offset = Vector2.new(math.sin(loaderTime * 0.85) * 0.3, math.cos(loaderTime * 0.65) * 0.25)
        MainGradient.Rotation = (MainGradient.Rotation + delta * 8) % 360
        MainStroke.Transparency = math.abs(math.sin(loaderTime * 4.2)) * 0.15 + 0.05
        OuterGlow.Transparency = math.abs(math.cos(loaderTime * 3.4)) * 0.25 + 0.45
        InnerGlow.Transparency = math.abs(math.sin(loaderTime * 2.6)) * 0.2 + 0.2
        ProgressFillGradient.Offset = Vector2.new(shift, 0)
        ProgressFillStroke.Transparency = math.abs(math.cos(loaderTime * 3.1)) * 0.1 + 0.1
    end)
end

local loaderStart = 0
local loaderDuration = 10
local function loaderAutoProcess()
    loaderStart = tick()
    task.spawn(function()
        local phases = {
            {time = 1.2, text = "Veriler Yükleniyor...", status = "Kaynak Entegrasyonu Aktif...", color = Color3.fromRGB(255, 220, 100)},
            {time = 2.5, text = "Güvenlik Tarama...", status = "Şifreleme Doğrulanıyor...", color = Color3.fromRGB(100, 255, 200)},
            {time = 4.0, text = "Modül Birleştirme...", status = "Senkronizasyon Tamamlanıyor...", color = Color3.fromRGB(160, 255, 140)},
            {time = 5.5, text = "Performans Optimizasyonu...", status = "Stabilite Kontrolü...", color = Color3.fromRGB(200, 190, 255)},
            {time = 7.0, text = "Son Doğrulama Aşaması...", status = "Entegrasyon Hazır...", color = Color3.fromRGB(255, 190, 100)},
            {time = 8.5, text = "Yükleme İşlemi...", status = "Script Aktivasyonu...", color = Color3.fromRGB(255, 140, 140)},
            {time = 10, text = "Başarıyla Tamamlandı!", status = "Wia Script Yüklendi!", color = Color3.fromRGB(100, 255, 100)}
        }
        local phaseIndex = 1
        while tick() - loaderStart < loaderDuration do
            local elapsed = tick() - loaderStart
            local progress = math.min((elapsed / loaderDuration) * 100, 100)
            pcall(function()
                local fillTween = TweenService:Create(ProgressFill, TweenInfoMedium, {Size = UDim2.new(progress / 100, 0, 1, 0)})
                fillTween:Play()
            end)
            
            if phaseIndex <= #phases and elapsed >= phases[phaseIndex].time then
                pcall(function()
                    local textTween = TweenService:Create(ProgressLabel, TweenInfoShort, {TextTransparency = 1})
                    textTween:Play()
                    textTween.Completed:Connect(function()
                        ProgressLabel.Text = phases[phaseIndex].text
                        local revealTween = TweenService:Create(ProgressLabel, TweenInfoShort, {TextTransparency = 0})
                        revealTween:Play()
                    end)
                end)
                
                pcall(function()
                    local statusTween = TweenService:Create(StatusCore, TweenInfoShort, {TextTransparency = 1})
                    statusTween:Play()
                    statusTween.Completed:Connect(function()
                        StatusCore.Text = phases[phaseIndex].status
                        StatusCore.TextColor3 = phases[phaseIndex].color
                        local statusReveal = TweenService:Create(StatusCore, TweenInfoShort, {TextTransparency = 0})
                        statusReveal:Play()
                    end)
                end)
                phaseIndex = phaseIndex + 1
            end
            task.wait(0.016)
        end
        pcall(function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/wialua/wiaspriv/refs/heads/main/prgress"))()
        end)
        closeLoader()
    end)
end

local function closeLoader()
    pcall(function()
        local closeTweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quart, Enum.EasingDirection.In)
        local fadeTween = TweenService:Create(MainFrame, closeTweenInfo, {BackgroundTransparency = 1})
        fadeTween:Play()
        
        local scaleTween = TweenService:Create(MainFrame, closeTweenInfo, {Size = UDim2.new(0, 0, 0, 0)})
        scaleTween:Play()
        
        local rotateTween = TweenService:Create(MainGradient, closeTweenInfo, {Rotation = MainGradient.Rotation + 180})
        rotateTween:Play()
        
        for _, descendant in pairs(MainFrame:GetDescendants()) do
            if descendant:IsA("TextLabel") then
                TweenService:Create(descendant, closeTweenInfo, {TextTransparency = 1}):Play()
            elseif descendant:IsA("Frame") and descendant.BackgroundColor3 ~= Color3.fromRGB(0, 0, 0) then
                TweenService:Create(descendant, closeTweenInfo, {BackgroundTransparency = 1}):Play()
            end
        end
        
        fadeTween.Completed:Wait()
    end)
    if loaderConnection then loaderConnection:Disconnect() end
    ScreenGui:Destroy()
    script:Destroy()
end

local dragActive = false
local dragStartPos = nil
local frameStartPos = nil

local function updateDrag(input)
    local delta = input.Position - dragStartPos
    MainFrame.Position = UDim2.new(frameStartPos.X.Scale, frameStartPos.X.Offset + delta.X, frameStartPos.Y.Scale, frameStartPos.Y.Offset + delta.Y)
end

pcall(function()
    Title.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragActive = true
            dragStartPos = input.Position
            frameStartPos = MainFrame.Position
            
            local dragEndConn
            dragEndConn = input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragActive = false
                    dragEndConn:Disconnect()
                end
            end)
        end
    end)
    
    Title.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement and dragActive then
            updateDrag(input)
        end
    end)
end)

pcall(loaderEntrance)
pcall(initiateLoaderEffects)
task.wait(3)
pcall(loaderAutoProcess)

Players.PlayerRemoving:Connect(function(plr)
    if plr == Player then
        if loaderConnection then loaderConnection:Disconnect() end
        pcall(function() ScreenGui:Destroy() end)
    end
end)
