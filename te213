    Text = 'Auto Rebirth (SÃ¼rekli)',
    Tooltip = 'Toggle aÃ§Ä±k olduÄŸunda sÃ¼rekli rebirth atÄ±lÄ±r.',
    Default = false,  -- BaÅŸlangÄ±Ã§ta kapalÄ±
    Callback = function(state) 
        -- Toggle aÃ§Ä±ldÄ±ÄŸÄ±nda aktif olacak fonksiyon
        if state then
            -- Burada sÃ¼rekli rebirth tetikleme iÅŸlemi baÅŸlatÄ±lÄ±r
            while Toggles.AutoRebirthToggle.Value do
                -- Event'i tetikleyerek rebirth iÅŸlemini baÅŸlatÄ±yoruz
                local Event = game:GetService("ReplicatedStorage").Packages.Knit.Services:GetChildren()[6].RF["jag k\195\164nner en bot, hon heter anna, anna heter hon"]
                Event:InvokeServer(RebirthSayisi)
                wait(0.1)  -- HÄ±zlÄ± bir ÅŸekilde iÅŸlem yapÄ±labilmesi iÃ§in kÄ±sa bir bekleme sÃ¼resi (0.1 saniye)
            end
        end
    end
})

