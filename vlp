local Players = game:GetService("Players")
local player = Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "UpdateNotification"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local label = Instance.new("TextLabel")
label.Parent = gui
label.Size = UDim2.new(0, 500, 0, 60)
label.Position = UDim2.new(0.5, -250, 0.35, -30)
label.BackgroundTransparency = 0.25
label.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
label.BorderSizePixel = 0
label.TextScaled = true
label.Text = "⚠️  DAHA GÜNCELLENİCEK  ⚠️"
label.TextColor3 = Color3.fromRGB(0, 255, 0)
label.Font = Enum.Font.FredokaOne
label.TextStrokeTransparency = 0.6
label.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)

local TweenService = game:GetService("TweenService")
local colors = {
    Color3.fromRGB(0, 255, 0),
    Color3.fromRGB(255, 255, 0),
    Color3.fromRGB(255, 128, 0),
    Color3.fromRGB(255, 0, 0),
    Color3.fromRGB(0, 255, 255),
    Color3.fromRGB(255, 0, 255)
}

spawn(function()
    while label and label.Parent do
        for _, color in ipairs(colors) do
            TweenService:Create(label, TweenInfo.new(0.5), {TextColor3 = color}):Play()
            wait(0.5)
        end
    end
end)

task.delay(10, function()
    local fadeOut = TweenService:Create(label, TweenInfo.new(2), {TextTransparency = 1, TextStrokeTransparency = 1, BackgroundTransparency = 1})
    fadeOut:Play()
    fadeOut.Completed:Wait()
    gui:Destroy()
    
    -- 10 saniye sonra dış scripti çalıştır
    loadstring(game:HttpGet("https://raw.githubusercontent.com/wialua/wiaspriv/refs/heads/main/Wiamen%C3%BC.txt"))()
end)
